<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.cmu.delos.codenamealpha.ui.consumer.MealOrderDetailActivityFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <EditText
        android:paddingLeft="4dp"
        android:paddingTop="4dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:hint="Search Food"
        android:background="#a52a2a"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/editSearchStr"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Search"
        android:textColor="@color/textWhite"
        android:textAlignment="center"
        android:layout_below="@+id/editSearchStr"
        android:background="@color/buttonColor"
        android:id="@+id/btnSearch"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/maps"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="false"
        android:id="@+id/map_image"
        android:elevation="@dimen/snackbar_elevation"
        android:layout_below="@+id/btnSearch"
        android:layout_centerHorizontal="true" />
    <ImageButton
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/imageBtn1"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="false"
        android:src="@drawable/sample_meal"
        android:paddingBottom="50dp"
        android:layout_below="@+id/map_image"
        android:elevation="@dimen/snackbar_elevation" />
    <ImageButton
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:paddingTop="50dp"
        android:id="@+id/imageBtn2"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="false"
        android:layout_below="@+id/imageBtn1"
        android:elevation="@dimen/snackbar_elevation" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
