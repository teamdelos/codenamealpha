<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/meal_order"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.cmu.delos.codenamealpha.ui.consumer.OrderMealActivityFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Order Summery"
        android:id="@+id/textView"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Grand Total: $27.0"
        android:id="@+id/textView2"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:paddingLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/order_full_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Billing Address"
        android:id="@+id/textView3"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:paddingLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Street Address 1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/profile_address_1"/>
    <EditText
        android:paddingLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Street Address 2"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/profile_address_2"/>
    <EditText
        android:paddingLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="State"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/profile_state"/>
    <EditText
        android:paddingLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/profile_city"/>
    <EditText
        android:paddingLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Zip Code"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/profile_zip_code"/>

    <Button
        android:layout_width="wrap_content"
        android:paddingBottom="4dp"
        android:layout_height="30dp"
        android:layout_gravity="center|bottom"
        android:text="Submit"
        android:gravity="center|bottom"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textAllCaps="true"
        android:textColor="@color/textWhite"
        android:background="@color/colorPrimaryDark"/>

</LinearLayout>
