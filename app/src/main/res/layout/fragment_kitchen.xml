<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cmu.delos.codenamealpha.ui.provider.KitchenActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_height="264dp"
            android:src="@drawable/provider2_meal6"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:src="@drawable/provider2_meal2"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"/>
        <ImageButton
            android:layout_width="386dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="match_parent"
            android:src="@drawable/provider2_meal3"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:src="@drawable/provider2_meal4"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:src="@drawable/provider2_meal5"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:src="@drawable/provider2_meal1"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Add Meal"
            android:textColor="@color/textWhite"
            android:background="@color/buttonColor"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Remove Meal"
            android:textColor="@color/textWhite"
            android:background="@color/buttonColor"/>

    </LinearLayout>


</RelativeLayout>
