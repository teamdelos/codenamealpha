<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.cmu.delos.codenamealpha.ui.provider.KitchenActivityFragment" android:layout_height="match_parent" android:layout_width="match_parent">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/provider2_meal6"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="@color/textWhite">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:src="@drawable/provider2_meal1"
        android:adjustViewBounds="false"
        android:baselineAlignBottom="false"
        android:id="@+id/imageButton"
        android:contentDescription="@string/Meal" />

    </android.support.v7.widget.CardView>

</LinearLayout>
