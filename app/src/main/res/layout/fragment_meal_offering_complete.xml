<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    tools:context="com.cmu.delos.codenamealpha.ui.provider.MealOfferCompleteFragment">

    <TextView
        android:text="Congratulations!"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textBlack"
        android:enabled="false"
        android:id="@+id/cong_sry_text"/>
    <TextView
        android:text="This listing will be published once reviewed!"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cong_sry_text"
        android:paddingTop="2dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/textBlack"
        android:enabled="false"
        android:id="@+id/succ_fail_text"/>
    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:id="@+id/space"
        android:layout_below="@+id/succ_fail_text"/>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/space"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:id="@+id/scrollView2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageWithPrice">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/default_meal"
                        android:gravity="center_horizontal"
                        android:adjustViewBounds="true"
                        android:elevation="@dimen/snackbar_elevation"
                        android:id="@+id/meal_offered_view"
                        android:layout_centerHorizontal="true" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/textWhite"
                        android:background="@color/colorPrimaryDark"
                        android:elevation="@dimen/snackbar_elevation"
                        android:id="@+id/dish_price_text"
                        android:layout_alignRight="@+id/meal_offered_view"
                        android:layout_alignBottom="@+id/meal_offered_view" />
                </RelativeLayout>
                <TextView
                    android:text="Meal Details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="4dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/textBlack"
                    android:enabled="false"
                    android:id="@+id/details_text"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:paddingTop="4dp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/textBlack"
                    android:enabled="false"
                    android:id="@+id/dishName"/>
                <ListView
                    android:id="@+id/listview_meal_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"/>
            </LinearLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>
</RelativeLayout>
