<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cmu.delos.codenamealpha.ui.provider.MealOfferCompleteFragment">

    <TextView
        android:text="Congratulations!"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/textBlack"
        android:enabled="false"
        android:id="@+id/cong_sry_text"/>
    <TextView
        android:text="This listing will be published once reviewed!"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cong_sry_text"
        android:paddingTop="6dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/textBlack"
        android:enabled="false"
        android:id="@+id/succ_fail_text"/>
    <android.widget.Space
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:id="@+id/space"
        android:layout_below="@+id/succ_fail_text"/>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/space"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/space"
                android:id="@+id/imageWithPrice">
                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:src="@drawable/image_placeholder"
                    android:gravity="center_horizontal"
                    android:adjustViewBounds="false"
                    android:elevation="@dimen/snackbar_elevation"
                    android:id="@+id/meal_offered_view"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/textWhite"
                    android:background="@color/colorPrimaryDark"
                    android:elevation="@dimen/snackbar_elevation"
                    android:id="@+id/dish_price_text"
                    android:layout_alignRight="@+id/meal_offered_view"
                    android:layout_alignBottom="@+id/meal_offered_view" />
            </RelativeLayout>
            <TextView
                android:text="Meal Details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="8dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/textBlack"
                android:enabled="false"
                android:id="@+id/details_text"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:paddingTop="8dp"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/textBlack"
                android:enabled="false"
                android:id="@+id/dishName"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="20dp"
                android:fillViewport="true"
                android:id="@+id/scrollView2">
                <ListView
                    android:id="@+id/listview_meal_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
