<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.cmu.delos.codenamealpha.ui.consumer.OrderCompleteFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Order(s) have been placed."
        android:id="@+id/textView"
        android:textAllCaps="false"
        android:textColor="@color/textBlack"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/price_complete"
        android:textAllCaps="true"
        android:textColor="@color/textBlack"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:src="@drawable/default_kitchen_dish_image"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="false"
        android:id="@+id/imageView_complete"
        android:elevation="@dimen/snackbar_elevation"
        android:layout_alignTop="@+id/price_complete"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textView4"
        android:textAllCaps="false"
        android:textColor="@color/textBlack"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/imageView_complete"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Provider: Jane Smith"
        android:id="@+id/textView5"
        android:textAllCaps="false"
        android:textColor="@color/textBlack"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
