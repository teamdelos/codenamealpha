<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cmu.delos.codenamealpha.ui" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:noHistory="true">
        </activity>
        <activity
            android:name=".provider.KitchenActivity"
            android:label="@string/title_activity_kitchen" >
        </activity>
        <activity
            android:name=".provider.OfferMealActivity"
            android:label="@string/title_activity_offer_meal" >
        </activity>
        <activity
            android:name=".consumer.SearchActivity"
            android:label="@string/title_activity_search">
        </activity>
        <activity
            android:name=".consumer.MealOrderDetailActivity"
            android:label="@string/title_activity_meal_page" >
        </activity>
    </application>

</manifest>
